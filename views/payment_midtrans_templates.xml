<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Midtrans Payment Form Template -->
    <template id="midtrans_form" name="Midtrans Payment Form">
        <div class="midtrans_payment_form">
            <!-- Midtrans Logo and Info -->
            <div class="text-center mb-4">
                <h4 class="mt-3">Secure Payment with Midtrans</h4>
            </div>
            
            <!-- Info Alert -->
            <div class="alert alert-info" role="alert">
                <i class="fa fa-info-circle"/> 
                <strong>You will be redirected to Midtrans secure payment page.</strong>
                <br/>
                Complete your payment and you'll be automatically redirected back.
            </div>
            
            <!-- Available Payment Methods -->
            <div class="card mb-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fa fa-credit-card"/> Available Payment Methods
                    </h6>
                    <div class="row text-center text-muted small">
                        <div class="col-md-6">
                            <ul class="list-unstyled text-left">
                                <li><i class="fa fa-check text-success"/> Credit/Debit Card</li>
                                <li><i class="fa fa-check text-success"/> Bank Transfer</li>
                                <li><i class="fa fa-check text-success"/> Virtual Account</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled text-left">
                                <li><i class="fa fa-check text-success"/> E-Wallet (GoPay, OVO, Dana)</li>
                                <li><i class="fa fa-check text-success"/> QRIS</li>
                                <li><i class="fa fa-check text-success"/> Installment</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Payment Button -->
            <button type="button" 
                    class="btn btn-primary btn-lg btn-block o_payment_submit_button" 
                    id="midtrans_pay_button"
                    t-att-data-snap-token="snap_token"
                    t-att-data-client-key="client_key"
                    t-att-data-snap-url="snap_url"
                    disabled="disabled">
                <i class="fa fa-lock"/> 
                <span class="button_text">Loading Payment...</span>
            </button>
            
            <!-- Security Badge -->
            <div class="text-center mt-3 text-muted small">
                <i class="fa fa-shield"/> 
                Your payment is secured with 256-bit SSL encryption
            </div>
        </div>
    </template>
    
    <!-- Inline template for payment form (embedded in checkout) -->
    <template id="midtrans_inline_form" name="Midtrans Inline Form">
        <div class="o_midtrans_inline_form">
            <input type="hidden" name="midtrans_snap_token" t-att-value="snap_token"/>
            <input type="hidden" name="midtrans_client_key" t-att-value="client_key"/>
            
            <div class="alert alert-info mb-3">
                <i class="fa fa-credit-card"/> 
                Click "Pay Now" to proceed with Midtrans secure payment
            </div>
        </div>
    </template>
</odoo>