<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="midtrans_form" name="Midtrans Payment Form">
        <form method="post" class="o_payment_form">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="/payment_midtrans/static/src/img/midtrans_icon.png" 
                             alt="Midtrans" 
                             style="max-height: 60px;"/>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"/> 
                        You will be redirected to Midtrans secure payment page.
                    </div>
                    
                    <div class="text-muted small">
                        <p><strong>Available Payment Methods:</strong></p>
                        <ul>
                            <li>Credit/Debit Card (Visa, MasterCard, JCB, Amex)</li>
                            <li>Bank Transfer (BCA, Mandiri, BNI, BRI, Permata)</li>
                            <li>E-Wallet (GoPay, OVO, Dana, ShopeePay, LinkAja)</li>
                            <li>QRIS</li>
                            <li>Installment</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <button type="button" 
                    class="btn btn-primary btn-lg btn-block mt-3" 
                    id="midtrans_pay_button"
                    t-att-data-snap-token="snap_token"
                    t-att-data-client-key="client_key"
                    t-att-data-api-url="api_url">
                <i class="fa fa-lock"/> Pay with Midtrans
            </button>
        </form>
    </template>
</odoo>
