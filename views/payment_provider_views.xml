<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_midtrans" model="ir.ui.view">
        <field name="name">payment.provider.midtrans</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[1]" position="inside">
                <group attrs="{'invisible':[('code','!=','midtrans')]}">
                    <field name="midtrans_snap_url"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
