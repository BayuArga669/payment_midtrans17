<odoo>
    <record id="view_midtrans_settings" model="ir.ui.view">
        <field name="name">midtrans.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>

        <field name="arch" type="xml">
            
            <!-- Inject ke <sheet> -->
            <xpath expr="//sheet" position="inside">

                <group string="Midtrans Payment">
                    <group>
                        <field name="midtrans_server_key"/>
                        <field name="midtrans_client_key"/>
                        <field name="midtrans_is_production"/>
                    </group>
                </group>

            </xpath>

        </field>
    </record>
</odoo>
