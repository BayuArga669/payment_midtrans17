<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_midtrans_settings" model="ir.ui.view">
        <field name="name">midtrans.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">

            <!-- Odoo 17 settings section -->
            <xpath expr="//div[contains(@class, 'o_setting_container')]" position="inside">

                <div class="o_setting_box">
                    <div class="o_setting_left_pane">
                        <span class="fa fa-credit-card"/>
                    </div>

                    <div class="o_setting_right_pane">
                        <h2>Midtrans Configuration</h2>

                        <div class="content-group">
                            <group>
                                <field name="midtrans_client_key"/>
                                <field name="midtrans_server_key"/>
                                <field name="midtrans_mode"/>
                            </group>
                        </div>
                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
