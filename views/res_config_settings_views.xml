<odoo>
    <record id="view_midtrans_settings" model="ir.ui.view">
        <field name="name">midtrans.res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Odoo 17: Tidak ada <sheet> -->
            <xpath expr="//div[@id='settings_container']" position="inside">

                <div class="app_settings_block" data-string="Midtrans" string="Midtrans">
                    <h2>Midtrans Settings</h2>

                    <group>
                        <field name="midtrans_client_key"/>
                        <field name="midtrans_server_key"/>
                        <field name="midtrans_mode"/>
                    </group>
                </div>

            </xpath>

        </field>
    </record>
</odoo>
